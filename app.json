{
  "expo": {
    "name": "mobile-attendance",
    "slug": "mobile-attendance",
    "scheme": "qr-attendance",
    "version": "1.0.0",
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "ios": {
      "bundleIdentifier": "com.qrattendance.mobile",
      "associatedDomains": [
        "applinks:*.supabase.co",
        "applinks:your-domain.com"
      ]
    },
    "android": {
      "package": "com.qrattendance.mobile",
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "*.supabase.co",
              "pathPrefix": "/auth/v1/callback"
            },
            {
              "scheme": "qr-attendance",
              "host": "auth"
            }
          ],
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ]
        }
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera.",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ]
  }
}
